<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="camp-form">
            <h1>Edit <%= camp.name %></h1>
            <form action=<%= '/camps/' + camp.id + '?_method=put' %> method='post'>
                <div class="form-group">
                    <input class="form-control" type='text' name='camp[name]' value=<%= camp.name %>>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' name='camp[image]' value=<%= camp.image %>>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name='camp[description]'><%= camp.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-large btn-block" type='submit'>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
