<% include partials/header %>
<div class="container">
    <header class='jumbotron'>
        <div class="container">
            <h1>Enjoy the Campings</h1>
            <p>Oh yes, enjoy some dirty stuff.</p>
            <p><a class="btn btn-primary btn-large" href='camps/new'>add camp</a></p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Get on these places here now.</h3>
        </div>
    </div>
    <div class="row flex-row">
        <% camps.forEach(function (camp) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img height=50 src=<%= camp.image %>>
                </div>
                <div class="caption"><a href=<%= '/camps/' + camp._id %>><h4><%= camp.name %></h4></a></div>
            </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>
